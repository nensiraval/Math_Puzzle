<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUZZLE 7 COMPLETED"
        android:textColor="#1E32A1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/tropy"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/trophy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintVertical_bias="0.113" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cnwin"
            android:background="@drawable/win"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text=" CONTINUE"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mmenu"
            android:background="@drawable/win"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="MAIN MENU"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bpro"
            android:background="@drawable/win"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="BUY PRO"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE THIS PUZZLE"
            android:textSize="25dp"
            android:textColor="#1E32A1"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/sharwin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/win"
            android:src="@drawable/shareus"
            android:layout_gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
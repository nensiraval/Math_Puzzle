<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameplaybackground"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txt"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/level_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hint"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/skip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/skip"
        android:layout_margin="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt" />


    <ImageView
        android:id="@+id/solve"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/p1"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tynum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        app:layout_constraintBottom_toTopOf="@id/n123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/typ"
            android:background="@drawable/white"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="start"
            android:textSize="30dp"
            android:text=""
            android:textColor="@color/black"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/delete"
            android:background="@drawable/delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/typ"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/delete"
            android:layout_margin="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/n123"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black">

        <Button
        style="@style/oneclick"
        android:id="@+id/n1"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n2"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="2"
            app:layout_constraintStart_toEndOf="@id/n1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n3"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="3"
            app:layout_constraintStart_toEndOf="@id/n2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n4"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="4"
            app:layout_constraintStart_toEndOf="@id/n3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n5"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="5"
            app:layout_constraintStart_toEndOf="@id/n4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n6"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="6"
            app:layout_constraintStart_toEndOf="@id/n5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n7"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="7"
            app:layout_constraintStart_toEndOf="@id/n6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n8"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="8"
            app:layout_constraintStart_toEndOf="@id/n7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n9"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="9"
            app:layout_constraintStart_toEndOf="@id/n8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/oneclick"
            android:id="@+id/n0"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/n9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
